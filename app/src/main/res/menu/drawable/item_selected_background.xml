<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#CDC2AD" />
                    <corners android:radius="5dp" /> <!-- Điều này làm cho góc được bo tròn -->
                </shape>
            </item>
            <item android:right="3dp" android:left="3dp" android:top="3dp" android:bottom="3dp">
                <shape>
                    <solid android:color="#D8D8D8" /> <!-- Màu bóng -->
                    <corners android:radius="5dp" /> <!-- Điều này làm cho góc của bóng được bo tròn -->
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:drawable="@android:color/transparent" />
</selector>
